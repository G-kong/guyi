/* pages/film/schedule/schedule.wxss */
.film-head {
    background-color: #ea3855;
}

.film-frame {
    background: repeating-linear-gradient(45deg, #fff 0, #fff 10px, #000 0, #000 20px);
    background-image: radial-gradient(#000 1px, transparent 0px);
    background-size: 10px 10px;
}

.film-pic-bg {
    position: relative;
    width: 100vw;
    overflow: hidden;
}
.film-pic-shade{
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    background-attachment: fixed;
    filter: blur(20px);
}


.film-avatar{
    /* position: absolute; */
    width: 200rpx;
    height: 266rpx;
    font-size: 2.5em;
    align-content: center;
  }
  
  .film-content {
      /* position: absolute; */
      /* left: 146rpx; */
      width: calc(100% - 200rpx - 60rpx);
      line-height: 1.4em;
      z-index: 1;
  }

  .film-intro{
      width: 100%;
  }

.date-list{
    position: relative;
    width: 100%;
    overflow: auto;
    white-space: nowrap;
}

.line {
    margin: 0 auto;
    width: 100%;
    height: 3rpx;
    background: #ea3855;
    border-radius: 3rpx;
}

.line-ver {
    margin: 0 auto;
    width: 3rpx;
    height: 90rpx;
    background: #ebebeb;
}

.font-text {
    font-weight: 540;
    font-size: 32rpx;
    color: #3c3c3c;
}

.font-text-sm {
    font-size: 25rpx;
    color: #a2a2a2;
}

.line-cut {
    margin: 0 auto;
    width: 95%;
    height: 2rpx;
    background: #ebebeb;
}

.text-cut-1 {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}

.padding-right-100 {
	padding-right: 100rpx;
}