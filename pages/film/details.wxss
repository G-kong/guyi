/* pages/film/components/filminfo.wxss */
.film-head {
    background-color: #ea3855;
}

.film-frame {
    background: repeating-linear-gradient(45deg, #fff 0, #fff 10px, #000 0, #000 20px);
    background-image: radial-gradient(#000 1px, transparent 0px);
    background-size: 10px 10px;
}

.film-pic-bg {
    position: relative;
    width: 100vw;
    overflow: hidden;
}
.film-pic-shade{
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    background-attachment: fixed;
    filter: blur(20px);
}


.film-avatar{
    /* position: absolute; */
    width: 200rpx;
    height: 266rpx;
    font-size: 2.5em;
  }
  
  .film-content {
      /* position: absolute; */
      /* left: 146rpx; */
      width: calc(100% - 200rpx - 60rpx);
      line-height: 1.4em;
      z-index: 1;
  }

  .film-intro{
      width: 100%;
  }