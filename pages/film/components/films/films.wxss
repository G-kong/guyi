/* pages/index/components/item/item.wxss */

.film-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  color: #4a4a4a;
}

.film-item.eleme {
  background-image: url("https://sswmapi.gykj007.com/wmxgimg/label-ele.png"), url("https://sswmapi.gykj007.com/wmxgimg/mark-ele.png");
  background-repeat: no-repeat, no-repeat;
  background-position: top left, bottom left;
  background-size: 12%, 12%;
}

.film-item.meituan {
  background-image: url("https://sswmapi.gykj007.com/wmxgimg/label-mt.png"), url("https://sswmapi.gykj007.com/wmxgimg/mark-mt.png");
  background-repeat: no-repeat, no-repeat;
  background-position: top left, bottom left;
  background-size: 12%, 12%;
}

.film-item .cutting_line_frame {
  /* position: relative; */
  width: 32rpx;
  height: 100%;
  overflow: hidden;
}

.film-item .cutting_line {
  width: 17rpx;
  height: 100%;
  border-right-width: 2rpx;
  border-right-style: dashed;
  border-color: #EBEBEB;
}

.film-item .cutting_line_frame .round {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #EBEBEB;
}

.film-item .cutting_line_frame .round.top {
  top: -17rpx;
  left: 0rpx;
}

.film-item .cutting_line_frame .round.bottom {
  bottom: -17rpx;
  left: 0px;
}

.film-item .item-unit {
  margin-bottom: 8rpx;
}

.film-item .item-num {
  color: #AA1E3B;
  background-color: #FFEBE3;
  border-radius: 6rpx;
  margin-bottom: 8rpx;
}

.film-item .item-btns {
  width: 26vw;
}

.film-item .item-btns .btn {
  width: 70%;
  border-radius: 30rpx;
  color: #FFFFFF;
  background-color: #FF5B73;
  padding: 15rpx 10rpx;
}

.film-avatar{
  /* position: absolute; */
  width: 126rpx;
  height: 168rpx;
  font-size: 2.5em;
}

.film-content {
	/* position: absolute; */
	/* left: 146rpx; */
	width: calc(100% - 126rpx - 60rpx);
	line-height: 1.6em;
}