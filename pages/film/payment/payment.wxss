/* pages/film/payment/payment.wxss */
.film-head {
  background-color: #ea3855;
}

.container{
  position: relative;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(to bottom, #ea3855 0vw, #ea3855 35vw, #EBEBEB 35vw, #EBEBEB 100%);
}

.film-avatar{
  /* position: absolute; */
  width: 160rpx;
  height: 245rpx;
  font-size: 2.5em;
}

.border-radius-pay {
  border-radius: 18rpx;
}

.padding-lr {
  padding-left: 12rpx;
  padding-right: 12rpx;
}

.text-cut-1 {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}

.img-item {
	display: inline-block;
	border-bottom: none;
	width: 100%;
	height: 260rpx;
	position: relative;
	z-index: 1000;
  margin: 0rpx 0 0;
}

.line-cut {
  margin: 0 auto;
  width: 100%;
  height: 2rpx;
  background: #cfcdcd;
}