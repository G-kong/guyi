/* pages/myteam/components/portion/portion.wxss */
.line{
  float:left;width: 1px;height: 25px; background: #000;
}

.flex-direction-row {
  flex-direction: row;
}

 .bg-red{
  background-color: #ea3855;
  color: var(--white)
}

.team-radius-20 {
	border-radius: 20rpx;
}

.team-radius-15 {
	border-radius: 15rpx;
}

.text-50 {
	font-size: 50rpx;
}

.team-tag {
	font-size: 24rpx;
	vertical-align: middle;
	position: relative;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	/* box-sizing: border-box; */
	height: 48rpx;
	font-family: Helvetica Neue, Helvetica, sans-serif;
  white-space: nowrap;
	overflow: hidden;
}

.team-tag[class*="line-"]::after {
	content: " ";
	width: 200%;
	height: 200%;
	position: absolute;
	top: 0;
	left: 0;
	border: 1rpx solid currentColor;
	transform: scale(0.5);
	transform-origin: 0 0;
	box-sizing: border-box;
	border-radius: inherit;
	z-index: 1;
	pointer-events: none;
}

.nav .team-item {
	height: 90rpx;
	display: inline-block;
	line-height: 90rpx;
	padding: 0 15rpx;
}